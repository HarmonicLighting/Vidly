@model Vidly.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    @if (Model.Birthdate.HasValue)
    {
        <li><b>Birthdate:</b> @Model.Birthdate.Value.ToShortDateString()</li>
    }
    <li><b>Subscription Type:</b> @Model.MembershipType.Name</li>
</ul>